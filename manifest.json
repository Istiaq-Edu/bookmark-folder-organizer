{
  "manifest_version": 2,
  "name": "Bookmark Folder Organizer",
  "version": "1.0.0",
  "description": "Rearrange bookmark folders chronologically based on dates in their names",
  "author": "Your Name",
  "homepage_url": "https://github.com/yourusername/bookmark-folder-organizer",
  
  "permissions": [
    "bookmarks",
    "storage"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Bookmark Folder Organizer",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png"
    }
  },
  
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "79.0"
    }
  }
}
